#!/bin/bash
# WSL 개발 환경 설정

# Flutter 명령어를 WSL에서 실행
alias flutter='cmd.exe /c "flutter"'

# AWS CLI Windows 버전 사용
alias aws='"/mnt/c/Program Files/Amazon/AWSCLIV2/aws.exe"'

# 현재 디렉토리를 Windows 경로로 변환하는 헬퍼
alias winpwd='wslpath -w $(pwd)'

# Flutter 개발 서버 실행 단축 명령어
alias flutter-dev='cmd.exe /c "cd $(winpwd) && flutter run -d chrome -t lib/main_dev.dart"'
alias flutter-test='cmd.exe /c "cd $(winpwd) && flutter run -d chrome -t lib/main_test_local.dart"'
alias flutter-analyze='cmd.exe /c "cd $(winpwd) && flutter analyze"'

echo "✅ WSL 개발 환경 설정 완료!"
echo "사용 가능한 명령어:"
echo "  flutter         - Flutter CLI"
echo "  aws            - AWS CLI"
echo "  amplify        - Amplify CLI (네이티브)"
echo "  flutter-dev    - 개발 모드 실행"
echo "  flutter-test   - 테스트 모드 실행"
echo "  flutter-analyze - 코드 분석"